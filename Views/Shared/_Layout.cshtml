<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Utd Dominicana</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/Scripts/js")
        @Styles.Render("~/Content/css")

        <script type="text/javascript">
            jQuery(document).ready(function () {
                jQuery('#btnLogout').click(function () {
                    jQuery.post("@Url.Action("logOut", "Login")", {},
                function (data) {
                    alert("session Finalizada");
                    if (data == "true") {
                        window.location = "/login";
                    }
                });

                });
            });

        </script>
    </head>
  
    <body>
        <header>
             <div class="page-container row-fluid">
            <div class="container-fluid content-wrapper clear-fix">
                <div class="row-fluid pull-left" style="width: 20%; vertical-align: middle;">
                    <img src="~/Images/utd_logo_big.png" style="margin-top: 7%;">
                </div>

                <div class="row-fluid pull-left" style="width: 32%; float: left; height: 10%">

                    <div class="span10">
                        <label style="text-align: center; font-weight: bold; font-family: 'Agency FB'; font-size: 22px; margin-right: -1%">Ventas ayer</label>
                    </div>

                    <label for="lvl" class="span5" style="text-align: right">Tiendas:</label>
                    <div id="lvl" class="progress progress-striped  active span5" style="min-height: 20px;">
                        <div style="width: 60%;min text-align: center" class="bar">50/100</div>
                    </div>

                    <label for="cadenaspercent" class="span5" style="text-align: right">Cadenas:</label>
                    <div id="cadenaspercent" class="progress progress-striped   progress-danger active span5" style="min-height: 20px;">
                        <div style="width: 60%; text-align: center" class="bar">50/100</div>
                    </div>

                    <label class="span5" style="text-align: right">Vendedores:</label>
                    <div class="progress progress-striped  span5 progress-danger active" style="min-height: 20px;">
                        <div style="width: 60%; text-align: center" class="bar">50/100</div>
                    </div>

                </div>

                <div class="row-fluid pull-right" style="width: 32%">

                    <div class="span10">
                        <label style="text-align: right; font-weight: bold; font-family: 'Agency FB'; font-size: 22px; margin-right: -2%">Lyons Corportation</label>
                    </div>


                    <label class="span5" style="text-align: right; margin-top: 0px">Balance:</label>
                    <div class="progress progress-striped  span5 progress-danger active" style="text-align: center;min-height: 20px;">
                        <div style="width: 60%; text-align: center" class="bar"></div>
                    </div>




                    <label class="span5" style="text-align: right; margin-top: 0px">Ganancia:</label>
                    <div class="progress progress-striped  span5 progress-danger active" style="text-align: center;min-height: 20px;">
                       TODAY RD$
                    </div>

                    <div class="span5"></div>
                    <div class="span5">
                        
                            <a class="btn" style="margin-top: -5px;height:22px !important;max-height:23px !important;padding-top:0px !important;padding-bottom:0px !important" id="btnLogout">logout&nbsp;<i class="icon-user"></i></a>
                      
                    </div>

                </div>
            </div>
               
                </div>
          
        </header>
        <div class="container">
                <div class="navbar">
                    <div class="navbar-inner content-wrapper clear-fix">

                        <!-- BEGIN LOGO (you can use logo image instead of text)-->

                        <!-- END LOGO -->

                        <!-- BEGIN RESPONSIVE MENU TOGGLER -->
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <!-- END RESPONSIVE MENU TOGGLER -->

                        <!-- BEGIN TOP NAVIGATION MENU -->
                        <div class="nav-collapse collapse">
                            <ul class="nav">

                                <li hidden="hidden"><a  href="/">ESTADISTICAS</a></li>
                                <li><a  href="/Chain">CADENAS</a></li>
                                <li hidden="hidden" ><a  href="page_about.html">COMERCIOS</a>

                                </li>
                                <li>
                                    <a  href="/Store">COMERCIO</a>
                                </li>
                                
                                        <li><a  href="/Distribuitors">DISTRIBUIDORES</a></li>
                                <li><a hidden="hidden"  href="/Vendors">VENDEDORES</a>
                                </li>
                                <li><a  href="/user">USUARIOS</a></li>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="0" data-close-others="false"  href="#">REPORTES
                                    <i class="icon-angle-down"></i>
                                    </a>
                                    <ul class="dropdown-menu">

                                        <li><a  href="/PaymentReports">REPORTE DE PAGOS</a></li>
                                        <li><a  href="/SalesReports">REPORETE DE VENTAS</a></li>
                                        <li><a  href="/TransactionsReport">REPORTE DE TRANSACCIONES</a></li>
                                        <li><a  href="/Products">REPORTE DE PRODUCTOS</a></li>

                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
             
</div>
            </div>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year Utelecard Dominicana</p>
                </div>
            </div>
        </footer>

       
        @RenderSection("scripts", required: false)
    

    </body>
</html>
